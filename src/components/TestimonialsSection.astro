---
import { t } from "../i18n";

interface Props {
  locale: "en" | "es";
}

const { locale } = Astro.props;
const dict = t(locale);
---

<section class="py-20 lg:py-28 bg-surface/50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="font-display text-3xl md:text-4xl font-bold text-foreground">
        {dict.testimonials.title}
      </h2>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
      {dict.testimonials.items.map((testimonial) => (
        <div class="p-6 bg-surface border border-border rounded-xl">
          <div class="flex items-start gap-4">
            <div class="relative h-12 w-12 overflow-hidden rounded-full bg-cush-gray-800 shrink-0">
              <img
                src={testimonial.avatar}
                alt={`${testimonial.name} avatar`}
                class="h-full w-full object-cover"
              />
            </div>
            <div class="flex-1">
              <p class="text-muted mb-4 italic">"{testimonial.quote}"</p>
              <div>
                <div class="font-display font-semibold text-foreground">{testimonial.name}</div>
                <div class="text-sm text-muted">{testimonial.title}</div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

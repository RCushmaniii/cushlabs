---
interface Props {
  spacing?: 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
  id?: string;
}

const { spacing = 'lg', class: className, id } = Astro.props;

const spacingClasses = {
  sm: 'py-12',
  md: 'py-16 md:py-20',
  lg: 'py-20 md:py-28',
  xl: 'py-24 md:py-32',
};
---

<section id={id} class:list={[spacingClasses[spacing], className]}>
  <slot />
</section>

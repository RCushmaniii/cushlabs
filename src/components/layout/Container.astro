---
interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
}

const { size = 'lg', class: className } = Astro.props;

const sizeClasses = {
  sm: 'max-w-3xl',
  md: 'max-w-5xl',
  lg: 'max-w-7xl',
  xl: 'max-w-[1400px]',
};
---

<div class:list={['mx-auto w-full px-4 sm:px-6 lg:px-8', sizeClasses[size], className]}>
  <slot />
</div>

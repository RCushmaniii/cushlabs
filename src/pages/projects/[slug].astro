---
import BaseLayout from "../../layouts/BaseLayout.astro";
import projectsData from "../../data/projects.generated.json";
import { t } from "../../i18n";
import { getProjectDetailOverride } from "../../data/projectDetails";

type Project = (typeof projectsData.projects)[number];

export function getStaticPaths() {
  return projectsData.projects.map((project) => ({
    params: { slug: project.name },
    props: { project },
  }));
}

const locale = "en" as const;
const dict = t(locale);

const { project } = Astro.props as { project: Project };
const override = getProjectDetailOverride(project.name);
const detail = override?.en ?? null;

const title = `${project.title} | ${dict.work.title} | CushLabs.ai`;
const description = (
  detail?.subheadline ||
  project.description ||
  project.summary ||
  ""
).replace(/<[^>]*>/g, "");

const demoUrl =
  override?.demoUrl || project.demoUrl || project.homepage || null;
const codeUrl = project.url;

const githubMatch = project.url.match(/github\.com\/([^/]+)\/([^/]+)(?:\/|$)/i);
const ogImageUrl = githubMatch
  ? `https://opengraph.githubassets.com/1/${githubMatch[1]}/${githubMatch[2]}`
  : null;
const images = override?.images?.length
  ? override.images
  : ogImageUrl
    ? [{ src: ogImageUrl, alt: { en: project.title, es: project.title } }]
    : [];

const videoUrl = override?.videoUrl ?? null;

const tech = Array.from(
  new Set(
    [...(project.stack || []), project.language].filter(Boolean) as string[]
  )
);
const topics = Array.from(
  new Set([...(project.topics || []), ...(project.tags || [])])
);

const stars = project.stars;
const forks = project.forks;
const lastPushed = new Date(project.lastPushed).toLocaleDateString();
---

<BaseLayout title={title} description={description}>
  <main class="pb-24">
    <div class="mx-auto max-w-7xl px-4 pt-10">
      <a
        href="/solutions"
        class="inline-flex items-center gap-2 text-sm font-display font-semibold text-muted hover:text-cush-orange transition-colors"
      >
        <span>←</span>
        <span>{dict.project.backToWork}</span>
      </a>

      <header class="mt-8 grid grid-cols-1 gap-8 lg:grid-cols-3 lg:items-start">
        <div class="lg:col-span-2">
          <h1
            class="font-display text-4xl md:text-6xl font-bold text-foreground tracking-tight"
          >
            {detail?.headline || project.title}
          </h1>
          <p class="mt-4 text-lg text-muted max-w-3xl">
            {
              detail?.subheadline ||
                project.description ||
                project.summary ||
                ""
            }
          </p>

          <div class="mt-6 flex flex-wrap gap-2">
            {
              project.isFeatured && (
                <span class="px-2 py-1 bg-cush-orange text-cush-black text-xs font-display font-semibold rounded uppercase tracking-wide">
                  {dict.work.filterFeatured}
                </span>
              )
            }
            {
              project.status && (
                <span class="px-2 py-1 text-xs font-display font-semibold rounded uppercase tracking-wide bg-base/40 border border-border text-muted">
                  {project.status}
                </span>
              )
            }
          </div>
        </div>

        <aside class="rounded-2xl border border-border bg-surface p-6">
          <h2 class="font-display text-lg font-bold text-foreground">
            {dict.project.links}
          </h2>
          <div class="mt-4 flex flex-col gap-3">
            {
              demoUrl && (
                <a
                  href={demoUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center gap-2 rounded-lg bg-cush-orange px-5 py-3 text-sm font-display font-semibold text-black hover:opacity-90 transition-opacity"
                >
                  {dict.project.liveDemo}
                  <span aria-hidden="true">↗</span>
                </a>
              )
            }
            <a
              href={codeUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 rounded-lg border border-border bg-base/40 px-5 py-3 text-sm font-display font-semibold text-foreground hover:opacity-90 transition-opacity"
            >
              {dict.project.sourceCode}
              <span aria-hidden="true">↗</span>
            </a>
          </div>

          <dl class="mt-6 space-y-3 text-sm">
            <div class="flex items-start justify-between gap-4">
              <dt class="text-muted">{dict.project.lastUpdated}</dt>
              <dd class="text-foreground text-right">{lastPushed}</dd>
            </div>
            <div class="flex items-start justify-between gap-4">
              <dt class="text-muted">{dict.project.stars}</dt>
              <dd class="text-foreground text-right">{stars}</dd>
            </div>
            <div class="flex items-start justify-between gap-4">
              <dt class="text-muted">{dict.project.forks}</dt>
              <dd class="text-foreground text-right">{forks}</dd>
            </div>
          </dl>
        </aside>
      </header>

      <section class="mt-10 grid grid-cols-1 gap-8 lg:grid-cols-3">
        <div class="lg:col-span-2 space-y-8">

          {/* Video Section */}
          {videoUrl && (
            <div class="rounded-2xl border border-border bg-surface overflow-hidden">
              <div class="p-4 md:p-6 border-b border-border">
                <h2 class="font-display text-lg font-bold text-foreground">
                  {dict.project.videoWalkthrough}
                </h2>
              </div>
              <div class="p-4 md:p-6">
                <video
                  controls
                  preload="metadata"
                  class="w-full rounded-xl"
                  poster={images[0]?.src}
                >
                  <source src={videoUrl} type="video/mp4" />
                  Your browser does not support the video tag.
                </video>
              </div>
            </div>
          )}

          {/* Image Slider */}
          {images.length > 0 && (
            <div class="rounded-2xl border border-border bg-surface overflow-hidden">
              <div class="p-4 md:p-6 border-b border-border flex items-center justify-between">
                <h2 class="font-display text-lg font-bold text-foreground">
                  {dict.project.screenshots}
                </h2>
                {images.length > 1 && (
                  <span class="text-sm text-muted" id="slide-counter">1 / {images.length}</span>
                )}
              </div>
              <div class="relative group">
                <div id="slider" class="overflow-hidden">
                  <div id="slider-track" class="flex transition-transform duration-300 ease-in-out">
                    {images.map((img) => (
                      <div class="w-full flex-shrink-0 p-4 md:p-6">
                        <figure class="rounded-xl border border-border bg-base/40 overflow-hidden">
                          <img
                            src={img.src}
                            alt={img.alt.en}
                            loading="lazy"
                            class="w-full h-auto"
                          />
                        </figure>
                      </div>
                    ))}
                  </div>
                </div>
                {images.length > 1 && (
                  <>
                    <button
                      id="prev-btn"
                      class="absolute left-2 top-1/2 -translate-y-1/2 w-10 h-10 rounded-full bg-black/60 text-white flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity hover:bg-black/80"
                      aria-label="Previous image"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
                    </button>
                    <button
                      id="next-btn"
                      class="absolute right-2 top-1/2 -translate-y-1/2 w-10 h-10 rounded-full bg-black/60 text-white flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity hover:bg-black/80"
                      aria-label="Next image"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                    </button>
                  </>
                )}
              </div>
              {images.length > 1 && (
                <div class="flex justify-center gap-2 pb-4">
                  {images.map((_, i) => (
                    <button
                      class:list={["slider-dot w-2.5 h-2.5 rounded-full transition-colors", i === 0 ? "bg-cush-orange" : "bg-gray-300 dark:bg-gray-600"]}
                      data-index={i}
                      aria-label={`Go to image ${i + 1}`}
                    />
                  ))}
                </div>
              )}
            </div>
          )}

          {/* The Challenge */}
          {detail?.problemTitle && detail?.problemBody && (
            <div class="rounded-2xl border border-border bg-surface p-6 md:p-8">
              <h2 class="font-display text-2xl font-bold text-foreground">
                {detail.problemTitle}
              </h2>
              <p class="mt-4 text-muted">{detail.problemBody}</p>
            </div>
          )}

          {/* Overview / The Solution */}
          <div class="rounded-2xl border border-border bg-surface p-6 md:p-8">
            <h2 class="font-display text-2xl font-bold text-foreground">
              {detail?.problemTitle ? dict.project.theSolution : dict.project.overview}
            </h2>
            <div class="mt-4 space-y-4 text-muted">
              {
                detail ? (
                  <>
                    <h3 class="font-display text-lg font-bold text-foreground">
                      {detail.overallVerdictTitle}
                    </h3>
                    <p>{detail.overallVerdictBody}</p>

                    <h3 class="font-display text-lg font-bold text-foreground">
                      {detail.whatItDoesWellTitle}
                    </h3>
                    <ul class="list-disc pl-5 space-y-2">
                      {detail.whatItDoesWell.map((item) => (
                        <li>{item}</li>
                      ))}
                    </ul>
                  </>
                ) : (
                  <p>{project.description || project.summary || ""}</p>
                )
              }
            </div>
          </div>

          {/* Key Results */}
          {detail?.resultsTitle && detail?.results && detail.results.length > 0 && (
            <div class="rounded-2xl border border-cush-orange/30 bg-cush-orange/5 dark:bg-cush-orange/10 p-6 md:p-8">
              <h2 class="font-display text-2xl font-bold text-foreground">
                {detail.resultsTitle}
              </h2>
              <ul class="mt-4 space-y-3">
                {detail.results.map((item) => (
                  <li class="flex items-start gap-3 text-muted">
                    <svg class="w-5 h-5 text-cush-orange flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}

          {/* Highlights */}
          {
            detail && (
              <div class="rounded-2xl border border-border bg-surface p-6 md:p-8">
                <h2 class="font-display text-2xl font-bold text-foreground">
                  {dict.project.highlights}
                </h2>
                <div class="mt-6 grid grid-cols-1 gap-6 md:grid-cols-2">
                  <div class="rounded-xl border border-border bg-base/40 p-5">
                    <h3 class="font-display text-lg font-bold text-foreground">
                      {dict.project.goodFor}
                    </h3>
                    <ul class="mt-3 list-disc pl-5 space-y-2 text-muted">
                      {detail.goodFor.map((item) => (
                        <li>{item}</li>
                      ))}
                    </ul>
                  </div>
                  <div class="rounded-xl border border-border bg-base/40 p-5">
                    <h3 class="font-display text-lg font-bold text-foreground">
                      {dict.project.notFor}
                    </h3>
                    <ul class="mt-3 list-disc pl-5 space-y-2 text-muted">
                      {detail.notFor.map((item) => (
                        <li>{item}</li>
                      ))}
                    </ul>
                  </div>
                </div>

                <div class="mt-6 rounded-xl border border-border bg-base/40 p-5">
                  <h3 class="font-display text-lg font-bold text-foreground">
                    {dict.project.whatYouGet}
                  </h3>
                  <ul class="mt-3 list-disc pl-5 space-y-2 text-muted">
                    {detail.whatYouGet.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                </div>
              </div>
            )
          }
        </div>

        <aside class="space-y-6">
          <div class="rounded-2xl border border-border bg-surface p-6">
            <h2 class="font-display text-lg font-bold text-foreground">
              {dict.project.tech}
            </h2>
            <div class="mt-4 flex flex-wrap gap-2">
              {
                tech.length ? (
                  tech.map((tag) => (
                    <span class="px-2 py-1 bg-base/40 border border-border rounded text-xs text-muted font-display">
                      {tag}
                    </span>
                  ))
                ) : (
                  <p class="text-sm text-muted">—</p>
                )
              }
            </div>
          </div>

          <div class="rounded-2xl border border-border bg-surface p-6">
            <h2 class="font-display text-lg font-bold text-foreground">
              {dict.project.topics}
            </h2>
            <div class="mt-4 flex flex-wrap gap-2">
              {
                topics.length ? (
                  topics
                    .slice(0, 16)
                    .map((tag) => (
                      <span class="px-2 py-1 bg-base/40 border border-border rounded text-xs text-muted font-display">
                        {tag}
                      </span>
                    ))
                ) : (
                  <p class="text-sm text-muted">—</p>
                )
              }
            </div>
          </div>
        </aside>
      </section>

      {/* Bottom CTA */}
      <section class="mt-16 rounded-2xl bg-gray-900 dark:bg-black p-8 md:p-12 text-center relative overflow-hidden">
        <div class="absolute inset-0 -z-10">
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[400px] h-[200px] bg-cush-orange/20 rounded-full blur-[80px]"></div>
        </div>
        <h2 class="font-display text-2xl md:text-3xl font-bold text-white mb-3">
          {dict.project.ctaHeadline}
        </h2>
        <p class="text-gray-400 mb-6 max-w-lg mx-auto">
          {dict.project.ctaBody}
        </p>
        <a
          href="/consultation"
          class="group inline-flex items-center gap-2 px-6 py-3 bg-cush-orange text-white font-display font-semibold rounded-lg hover:bg-cush-orange/90 transition-all shadow-lg shadow-cush-orange/25"
        >
          {dict.project.ctaButton}
          <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </section>
    </div>
  </main>

  {/* Slider script */}
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const track = document.getElementById('slider-track') as HTMLElement | null;
      const prevBtn = document.getElementById('prev-btn');
      const nextBtn = document.getElementById('next-btn');
      const counter = document.getElementById('slide-counter');
      const dots = document.querySelectorAll('.slider-dot');

      if (!track || dots.length === 0) return;

      const total = dots.length;
      let current = 0;

      function goTo(index: number) {
        current = ((index % total) + total) % total;
        track!.style.transform = `translateX(-${current * 100}%)`;
        if (counter) counter.textContent = `${current + 1} / ${total}`;
        dots.forEach((dot, i) => {
          dot.classList.toggle('bg-cush-orange', i === current);
          dot.classList.toggle('bg-gray-300', i !== current);
          dot.classList.toggle('dark:bg-gray-600', i !== current);
        });
      }

      prevBtn?.addEventListener('click', () => goTo(current - 1));
      nextBtn?.addEventListener('click', () => goTo(current + 1));
      dots.forEach((dot) => {
        dot.addEventListener('click', () => {
          const idx = parseInt((dot as HTMLElement).dataset.index || '0');
          goTo(idx);
        });
      });
    });
  </script>
</BaseLayout>

  <style>
    /* ========================================
       CSS Custom Properties
       ======================================== */
    :root {
      /* Colors */
      --color-black: #000000;
      --color-white: #FFFFFF;
      --color-orange: #FF6A3D;
      --color-orange-glow: rgba(255, 106, 61, 0.15);
      --color-orange-soft: rgba(255, 106, 61, 0.08);
      --color-gray-900: #0A0A0A;
      --color-gray-800: #141414;
      --color-gray-700: #1A1A1A;
      --color-gray-600: #2A2A2A;
      --color-gray-400: #666666;
      --color-gray-300: #888888;
      --color-gray-200: #AAAAAA;
      
      /* Typography */
      --font-display: 'Space Grotesk', sans-serif;
      --font-body: 'Source Serif 4', Georgia, serif;
      
      /* Fluid Typography Scale */
      --text-xs: clamp(0.75rem, 0.7rem + 0.25vw, 0.875rem);
      --text-sm: clamp(0.875rem, 0.8rem + 0.35vw, 1rem);
      --text-base: clamp(1rem, 0.9rem + 0.5vw, 1.125rem);
      --text-lg: clamp(1.125rem, 1rem + 0.6vw, 1.375rem);
      --text-xl: clamp(1.25rem, 1.1rem + 0.75vw, 1.625rem);
      --text-2xl: clamp(1.5rem, 1.2rem + 1.5vw, 2.25rem);
      --text-3xl: clamp(2rem, 1.5rem + 2.5vw, 3.5rem);
      --text-4xl: clamp(2.5rem, 1.8rem + 3.5vw, 5rem);
      --text-5xl: clamp(3rem, 2rem + 5vw, 7rem);
      
      /* Spacing */
      --space-xs: clamp(0.5rem, 0.4rem + 0.5vw, 0.75rem);
      --space-sm: clamp(0.75rem, 0.6rem + 0.75vw, 1.25rem);
      --space-md: clamp(1rem, 0.8rem + 1vw, 1.75rem);
      --space-lg: clamp(1.5rem, 1rem + 2.5vw, 3rem);
      --space-xl: clamp(2rem, 1.5rem + 3vw, 4.5rem);
      --space-2xl: clamp(3rem, 2rem + 5vw, 7rem);
      --space-3xl: clamp(4rem, 2.5rem + 7.5vw, 10rem);
      
      /* Layout */
      --max-width: 1440px;
      --content-width: min(90%, 1200px);
      
      /* Transitions */
      --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
      --ease-out-quart: cubic-bezier(0.25, 1, 0.5, 1);
      --duration-fast: 200ms;
      --duration-normal: 400ms;
      --duration-slow: 800ms;
    }

    /* ========================================
       Reset & Base
       ======================================== */
    *, *::before, *::after {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html {
      scroll-behavior: smooth;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    body {
      font-family: var(--font-body);
      font-size: var(--text-base);
      font-weight: 400;
      line-height: 1.7;
      color: var(--color-gray-200);
      background-color: var(--color-black);
      overflow-x: hidden;
      min-height: 100vh;
    }

    ::selection {
      background: var(--color-orange);
      color: var(--color-black);
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    img {
      max-width: 100%;
      display: block;
    }

    /* ========================================
       Language Switcher
       ======================================== */
    .lang-switcher {
      position: fixed;
      top: var(--space-md);
      right: var(--space-md);
      display: flex;
      align-items: center;
      gap: var(--space-xs);
      z-index: 100;
      opacity: 0;
      animation: fadeSlideUp var(--duration-slow) var(--ease-out-expo) 1s forwards;
    }

    .lang-btn {
      display: flex;
      align-items: center;
      gap: 6px;
      padding: 6px 10px;
      background: transparent;
      border: 1px solid var(--color-gray-700);
      border-radius: 4px;
      cursor: pointer;
      transition: all var(--duration-fast) var(--ease-out-quart);
      opacity: 0.5;
    }

    .lang-btn:hover {
      border-color: var(--color-gray-500);
      opacity: 0.8;
    }

    .lang-btn.active {
      border-color: var(--color-orange);
      opacity: 1;
      background: rgba(255, 106, 61, 0.08);
    }

    .lang-flag {
      width: 20px;
      height: 14px;
      object-fit: cover;
      border-radius: 2px;
      /* Placeholder styling - remove when using real flags */
      background: var(--color-gray-600);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 8px;
      color: var(--color-gray-300);
    }

    .lang-label {
      font-family: var(--font-display);
      font-size: 11px;
      font-weight: 600;
      letter-spacing: 0.05em;
      text-transform: uppercase;
      color: var(--color-gray-300);
    }

    .lang-btn.active .lang-label {
      color: var(--color-white);
    }

    /* Hide inactive language content */
    [data-lang="es"] { display: none; }
    html[lang="es"] [data-lang="en"] { display: none; }
    html[lang="es"] [data-lang="es"] { display: block; }

    /* Inline elements need inline display */
    span[data-lang="es"] { display: none; }
    html[lang="es"] span[data-lang="en"] { display: none; }
    html[lang="es"] span[data-lang="es"] { display: inline; }

    /* Paragraph elements */
    p[data-lang="es"] { display: none; }
    html[lang="es"] p[data-lang="en"] { display: none; }
    html[lang="es"] p[data-lang="es"] { display: block; }

    /* ========================================
       Layout Utilities
       ======================================== */
    .container {
      width: var(--content-width);
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 0 var(--space-md);
    }

    .section {
      padding: var(--space-2xl) 0;
      position: relative;
    }

    /* ========================================
       Background & Ambient Effects
       ======================================== */
    .bg-gradient {
      position: fixed;
      inset: 0;
      z-index: -2;
      background: 
        radial-gradient(ellipse 80% 50% at 50% -20%, var(--color-gray-800) 0%, transparent 50%),
        radial-gradient(ellipse 60% 40% at 100% 100%, var(--color-orange-soft) 0%, transparent 40%),
        var(--color-black);
    }

    .spotlight {
      position: fixed;
      width: 600px;
      height: 600px;
      border-radius: 50%;
      background: radial-gradient(circle, var(--color-orange-glow) 0%, transparent 70%);
      pointer-events: none;
      z-index: -1;
      opacity: 0;
      transform: translate(-50%, -50%);
      transition: opacity var(--duration-slow) var(--ease-out-expo);
      will-change: transform, opacity;
    }

    .spotlight.active {
      opacity: 1;
    }

    .noise-overlay {
      position: fixed;
      inset: 0;
      z-index: 9999;
      pointer-events: none;
      opacity: 0.015;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    }

    /* ========================================
       Hero Section
       ======================================== */
    .hero {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: var(--space-2xl) 0;
      position: relative;
      overflow: hidden;
    }

    .hero::before {
      content: '';
      position: absolute;
      top: 20%;
      left: 50%;
      transform: translateX(-50%);
      width: clamp(300px, 60vw, 800px);
      height: clamp(300px, 60vw, 800px);
      background: radial-gradient(circle, var(--color-orange-glow) 0%, transparent 60%);
      filter: blur(60px);
      opacity: 0.6;
      z-index: -1;
      animation: pulse 8s ease-in-out infinite;
    }

    .hero::after {
      content: '';
      position: absolute;
      top: 15%;
      left: 50%;
      transform: translateX(-50%);
      width: clamp(200px, 40vw, 500px);
      height: clamp(150px, 25vw, 300px);
      background: radial-gradient(ellipse, rgba(255, 255, 255, 0.03) 0%, transparent 70%);
      filter: blur(40px);
      z-index: -1;
    }

    @keyframes pulse {
      0%, 100% { opacity: 0.4; transform: translateX(-50%) scale(1); }
      50% { opacity: 0.7; transform: translateX(-50%) scale(1.1); }
    }

    .hero-content {
      position: relative;
      z-index: 1;
    }

    .brand {
      display: inline-flex;
      align-items: center;
      gap: var(--space-xs);
      margin-bottom: var(--space-lg);
      opacity: 0;
      transform: translateY(20px);
      animation: fadeSlideUp var(--duration-slow) var(--ease-out-expo) 0.2s forwards;
    }

    .brand-dot {
      width: 10px;
      height: 10px;
      background: var(--color-orange);
      border-radius: 50%;
      animation: brandPulse 2s ease-in-out infinite;
    }

    @keyframes brandPulse {
      0%, 100% { box-shadow: 0 0 0 0 var(--color-orange-glow); }
      50% { box-shadow: 0 0 20px 5px var(--color-orange-glow); }
    }

    .brand-text {
      font-family: var(--font-display);
      font-size: var(--text-sm);
      font-weight: 600;
      letter-spacing: 0.2em;
      text-transform: uppercase;
      color: var(--color-gray-300);
    }

    .hero-headline {
      font-family: var(--font-display);
      font-size: var(--text-4xl);
      font-weight: 700;
      line-height: 1.1;
      letter-spacing: -0.02em;
      color: var(--color-white);
      margin: 0 auto var(--space-md);
      max-width: 18ch;
      opacity: 0;
      transform: translateY(30px);
      animation: fadeSlideUp var(--duration-slow) var(--ease-out-expo) 0.4s forwards;
    }

    .hero-headline br {
      display: block;
    }

    .hero-headline .highlight {
      background: linear-gradient(135deg, var(--color-orange) 0%, #FF8A5C 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .hero-subheadline {
      font-family: var(--font-body);
      font-size: var(--text-lg);
      font-weight: 400;
      line-height: 1.6;
      color: var(--color-gray-300);
      max-width: 48ch;
      margin: 0 auto var(--space-xl);
      opacity: 0;
      transform: translateY(30px);
      animation: fadeSlideUp var(--duration-slow) var(--ease-out-expo) 0.6s forwards;
    }

    @keyframes fadeSlideUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* ========================================
       Countdown Timer
       ======================================== */
    .countdown {
      display: flex;
      justify-content: center;
      gap: clamp(1rem, 3vw, 2.5rem);
      margin-bottom: var(--space-xl);
      opacity: 0;
      transform: translateY(30px);
      animation: fadeSlideUp var(--duration-slow) var(--ease-out-expo) 0.8s forwards;
    }

    .countdown-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      min-width: clamp(60px, 12vw, 120px);
    }

    .countdown-value {
      font-family: var(--font-display);
      font-size: var(--text-3xl);
      font-weight: 700;
      color: var(--color-white);
      line-height: 1;
      letter-spacing: -0.02em;
      position: relative;
    }

    .countdown-value::after {
      content: '';
      position: absolute;
      bottom: -8px;
      left: 50%;
      transform: translateX(-50%);
      width: 100%;
      height: 2px;
      background: linear-gradient(90deg, transparent, var(--color-orange), transparent);
      opacity: 0.5;
    }

    .countdown-label {
      font-family: var(--font-display);
      font-size: var(--text-xs);
      font-weight: 600;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      color: var(--color-gray-400);
      margin-top: var(--space-sm);
    }

    .countdown-separator {
      font-family: var(--font-display);
      font-size: var(--text-2xl);
      color: var(--color-gray-600);
      align-self: flex-start;
      margin-top: 0.1em;
      opacity: 0.5;
      animation: blink 1s ease-in-out infinite;
    }

    @keyframes blink {
      0%, 100% { opacity: 0.5; }
      50% { opacity: 0.2; }
    }

    /* ========================================
       Scroll Indicator
       ======================================== */
    .scroll-indicator {
      position: absolute;
      bottom: var(--space-lg);
      left: 50%;
      transform: translateX(-50%);
      opacity: 0;
      animation: fadeSlideUp var(--duration-slow) var(--ease-out-expo) 1.2s forwards;
    }

    .scroll-line {
      width: 1px;
      height: 60px;
      background: linear-gradient(to bottom, var(--color-gray-400), transparent);
      position: relative;
      overflow: hidden;
    }

    .scroll-line::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 20px;
      background: var(--color-orange);
      animation: scrollDown 2s ease-in-out infinite;
    }

    @keyframes scrollDown {
      0% { transform: translateY(-100%); }
      50% { transform: translateY(200%); }
      100% { transform: translateY(200%); }
    }

    /* ========================================
       About Section
       ======================================== */
    .about {
      position: relative;
    }

    .about-content {
      max-width: 720px;
      margin: 0 auto;
      text-align: center;
    }

    .section-label {
      font-family: var(--font-display);
      font-size: var(--text-xs);
      font-weight: 600;
      letter-spacing: 0.25em;
      text-transform: uppercase;
      color: var(--color-orange);
      margin-bottom: var(--space-md);
      display: block;
    }

    .about-text {
      font-family: var(--font-body);
      font-size: var(--text-xl);
      font-weight: 300;
      line-height: 1.8;
      color: var(--color-gray-200);
      font-style: italic;
    }

    .about-text strong {
      color: var(--color-white);
      font-weight: 500;
      font-style: normal;
    }

    .divider {
      width: 80px;
      height: 1px;
      background: linear-gradient(90deg, transparent, var(--color-orange), transparent);
      margin: var(--space-lg) auto 0;
      opacity: 0.6;
    }

    /* ========================================
       Personal Intro Section
       ======================================== */
    .personal-intro {
      padding-top: 0;
    }

    .personal-content {
      max-width: 720px;
      margin: 0 auto;
      text-align: center;
    }

    .personal-greeting {
      font-family: var(--font-display);
      font-size: var(--text-xl);
      font-weight: 500;
      color: var(--color-white);
      margin-bottom: var(--space-md);
    }

    .personal-text {
      font-family: var(--font-body);
      font-size: var(--text-base);
      color: var(--color-gray-300);
      line-height: 1.8;
      margin-bottom: var(--space-sm);
    }

    .quote {
      margin: var(--space-lg) 0;
      padding: var(--space-lg);
      position: relative;
      background: linear-gradient(135deg, var(--color-gray-800) 0%, var(--color-gray-900) 100%);
      border-left: 3px solid var(--color-orange);
      border-radius: 0 4px 4px 0;
    }

    .quote::before {
      content: '"';
      position: absolute;
      top: -10px;
      left: var(--space-md);
      font-family: var(--font-display);
      font-size: 4rem;
      color: var(--color-orange);
      opacity: 0.3;
      line-height: 1;
    }

    .quote-text {
      font-family: var(--font-body);
      font-size: var(--text-lg);
      font-style: italic;
      color: var(--color-gray-200);
      line-height: 1.7;
      margin-bottom: var(--space-sm);
    }

    .quote-author {
      font-family: var(--font-display);
      font-size: var(--text-sm);
      font-weight: 600;
      color: var(--color-orange);
      font-style: normal;
    }

    .personal-closing {
      font-family: var(--font-body);
      font-size: var(--text-lg);
      color: var(--color-gray-200);
      margin-top: var(--space-md);
    }

    .personal-closing strong {
      color: var(--color-white);
    }

    /* ========================================
       Features / Value Section
       ======================================== */
    .features {
      background: linear-gradient(180deg, transparent 0%, var(--color-gray-900) 50%, transparent 100%);
    }

    .features-header {
      text-align: center;
      margin-bottom: var(--space-xl);
    }

    .section-title {
      font-family: var(--font-display);
      font-size: var(--text-2xl);
      font-weight: 700;
      color: var(--color-white);
      letter-spacing: -0.01em;
    }

    .features-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-lg);
      max-width: 900px;
      margin: 0 auto;
    }

    .feature-card {
      padding: var(--space-lg);
      background: linear-gradient(135deg, var(--color-gray-800) 0%, var(--color-gray-900) 100%);
      border: 1px solid var(--color-gray-700);
      border-radius: 4px;
      position: relative;
      overflow: hidden;
      transition: all var(--duration-normal) var(--ease-out-quart);
    }

    .feature-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 2px;
      background: linear-gradient(90deg, var(--color-orange), transparent);
      opacity: 0;
      transition: opacity var(--duration-normal) var(--ease-out-quart);
    }

    .feature-card:hover {
      border-color: var(--color-gray-600);
      transform: translateY(-4px);
    }

    .feature-card:hover::before {
      opacity: 1;
    }

    .feature-icon {
      width: 40px;
      height: 40px;
      margin-bottom: var(--space-md);
      color: var(--color-orange);
      opacity: 0.9;
    }

    .feature-title {
      font-family: var(--font-display);
      font-size: var(--text-base);
      font-weight: 600;
      color: var(--color-white);
      margin-bottom: var(--space-xs);
      letter-spacing: 0.01em;
    }

    .feature-text {
      font-family: var(--font-body);
      font-size: var(--text-sm);
      color: var(--color-gray-300);
      line-height: 1.6;
    }

    /* ========================================
       Contact Section
       ======================================== */
    .contact {
      text-align: center;
      padding-top: var(--space-lg);
      padding-bottom: var(--space-2xl);
    }

    .contact-text {
      font-family: var(--font-body);
      font-size: var(--text-lg);
      color: var(--color-gray-300);
      margin-bottom: var(--space-md);
    }

    .contact-email {
      font-family: var(--font-display);
      font-size: var(--text-xl);
      font-weight: 600;
      color: var(--color-white);
      position: relative;
      display: inline-block;
      padding-bottom: 4px;
      transition: color var(--duration-fast) var(--ease-out-quart);
    }

    .contact-email::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 2px;
      background: var(--color-orange);
      transform: scaleX(0);
      transform-origin: right;
      transition: transform var(--duration-normal) var(--ease-out-expo);
    }

    .contact-email:hover {
      color: var(--color-orange);
    }

    .contact-email:hover::after {
      transform: scaleX(1);
      transform-origin: left;
    }

    /* ========================================
       Footer
       ======================================== */
    .footer {
      padding: var(--space-lg) 0;
      text-align: center;
      border-top: 1px solid var(--color-gray-800);
    }

    .footer-text {
      font-family: var(--font-display);
      font-size: var(--text-xs);
      font-weight: 600;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--color-gray-500);
    }

    /* ========================================
       Scroll Animations
       ======================================== */
    .fade-in {
      opacity: 0;
      transform: translateY(40px);
      transition: opacity var(--duration-slow) var(--ease-out-expo),
                  transform var(--duration-slow) var(--ease-out-expo);
    }

    .fade-in.visible {
      opacity: 1;
      transform: translateY(0);
    }

    .fade-in-stagger {
      opacity: 0;
      transform: translateY(30px);
      transition: opacity var(--duration-slow) var(--ease-out-expo),
                  transform var(--duration-slow) var(--ease-out-expo);
    }

    .fade-in-stagger.visible {
      opacity: 1;
      transform: translateY(0);
    }

    /* Stagger delays for grid items */
    .feature-card:nth-child(1) { transition-delay: 0ms; }
    .feature-card:nth-child(2) { transition-delay: 100ms; }
    .feature-card:nth-child(3) { transition-delay: 200ms; }
    .feature-card:nth-child(4) { transition-delay: 300ms; }

    /* ========================================
       Parallax Layer
       ======================================== */
    .parallax-layer {
      position: fixed;
      inset: 0;
      z-index: -1;
      pointer-events: none;
      will-change: transform;
    }

    .parallax-orb {
      position: absolute;
      border-radius: 50%;
      filter: blur(80px);
      opacity: 0.3;
    }

    .parallax-orb-1 {
      width: 400px;
      height: 400px;
      background: var(--color-orange-glow);
      top: 20%;
      right: -10%;
    }

    .parallax-orb-2 {
      width: 300px;
